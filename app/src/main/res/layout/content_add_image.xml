<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    >


   <!-- <ImageView

        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Document"
            android:textSize="25dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/upload_Img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        <ImageView
            android:id="@+id/selectImage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Document Number"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:backgroundTint="#e1e1e1"
            android:layout_marginTop="20dp"
            android:id="@+id/edittext_docnumber"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_spinner1"
            android:id="@+id/spinnerdoctype"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/upload_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:padding="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            >

            <Button
                android:id="@+id/savedocumentbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_white"
                android:ems="15"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"/>
        </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/selectedItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>






</RelativeLayout>